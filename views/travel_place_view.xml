<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!--main form for travel place-->
        <record id="tavel_place_form" model="ir.ui.view">
            <field name="name">Travel.place.main.form</field>
            <field name="model">travel.travel.place</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="place_name"/>
                            <group colspan="2">
                                <field name="state_id"/>
                                <field name="country_id" options="{'no_open':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>